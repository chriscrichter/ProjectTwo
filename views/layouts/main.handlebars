                <button class="btn btn-primary btn-md" id="search-btn">
                <span class="fa fa-search"></span> Search</button>
            </div>
          </div>
      </form>
    </div>
    <div class="fact">
      {{#each facts}}
        <h4>
          <center><p>Recycling Fact: {{this.fact}}</p></center>
        </h4>
      {{/each}}
    </div>
   <div id="results-modal" class="information invisible">
    <div class="closing-x">
        <div>&times;</div>
    </div>
    <div id="stats">
        <h5 id="material"></h5>
        <h6 id="description"></h6>
    </div>
    </div>
    <!-- ========= LOGIN ======== -->
    <div id="login-modal" class="information invisible">
      <div class="closing-x">
          <div>&times;</div>
      </div>
    <form class="modal-form login">
        <input type="email" placeholder="johnsmith@gmail.com" class="info-field" class="login-email-field" id="email-input" >
        <input type="password" placeholder="password" class="info-field" class="login-password-field" id="password-input">
        </form>
        <button type="submit" id="modal-signup-button" class="add-messages-button">login</button>  
    </div>
    <!-- ========= SIGNUP ======== -->
    <div id="signup-modal" class="information invisible">
      <div class="closing-x">
          <div>&times;</div>
      </div>
    <form class="modal-form signup">
        <input type="email" placeholder="johnsmith@gmail.com" class="info-field" class="signup-email-field" id="email-input" >
        <input type="password" placeholder="password" class="info-field" class="signup-password-field" id="password-input">
        </form>
        <button type="submit" id="modal-signup-button" class="add-messages-button">Sign Up</button>  
    </div>
</div>
